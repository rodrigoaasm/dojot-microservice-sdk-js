{
  "name": "@dojot/microservice-sdk",
  "version": "0.1.13",
  "description": "A SDK to help to build microservices for the dojot platform",
  "engines": {
    "node": ">=12.18.4",
    "npm": ">=6.14.6"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "debugtest": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "check-licenses": "apache2-license-checker"
  },
  "main": "index.js",
  "author": "Rafael Augusto Scaraficci",
  "contributors": [
    "Eduardo Garcia Misiuk",
    "Mariane Previde",
    "Raul Negreiros",
    "Jonaphael Aristil",
    "Thiago de Paula Ferreira"
  ],
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "homepage": "https://github.com/dojot/dojot-microservice-sdk-js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojot/dojot-microservice-sdk-js.git"
  },
  "keywords": [
    "dojot",
    "microservices",
    "sdk",
    "kafka",
    "logging"
  ],
  "files": [
    "npm-shrinkwrap.json",
    "lib/**/*.js",
    "test/",
    "!test/unit/coverage/",
    "examples/",
    "index.js"
  ],
  "dependencies": {
    "async": "^3.2.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-paginate": "^1.0.2",
    "express-request-id": "^1.4.1",
    "express-ws": "^4.0.0",
    "fast-safe-stringify": "^2.0.7",
    "flat": "^5.0.2",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lightship": "^6.7.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-rdkafka": "^2.10.1",
    "on-finished": "^2.3.0",
    "serve-index": "^1.9.1",
    "uuid": "^3.3.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.2"
  },
  "devDependencies": {
    "@bbc/apache2-license-checker": "^1.1.4",
    "@types/jest": "^26.0.22",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "triple-beam": "^1.3.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": [
      "test/unit/*"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!index.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "lib"
    ],
    "collectCoverage": true,
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "test/unit/coverage"
    ],
    "coverageDirectory": "test/unit/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
